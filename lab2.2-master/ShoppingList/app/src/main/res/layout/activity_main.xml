<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/item_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"/>
    <TextView
        android:id="@+id/item_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"/>
    <TextView
        android:id="@+id/item_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"/>
    <TextView
        android:id="@+id/item_view4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"/>
    <TextView
        android:id="@+id/item_view5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"/>
    <TextView
        android:id="@+id/item_view6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"/>
    <TextView
        android:id="@+id/item_view7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"/>
    <TextView
        android:id="@+id/item_view8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"/>
    <TextView
        android:id="@+id/item_view9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"/>
    <TextView
        android:id="@+id/item_view10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"/>
    <Button
        android:id="@+id/add_item_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Add Item"
        android:onClick="launchItemActivity"
        android:textSize="16dp"/>
    <EditText
        android:id="@+id/stote_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a store"
        android:paddingTop="16dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:onClick="searchStore"/>



</LinearLayout>